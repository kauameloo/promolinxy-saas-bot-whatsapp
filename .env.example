TYPEBOT_GITHUB_CLIENT_ID=Ov23liZqwKvOK4MI2OiQ
TYPEBOT_GITHUB_CLIENT_SECRET=5c936d4d3322391613246421cc6e00cd027ec3bf

# =====================================================
# N8N (Workflow Automation)
# =====================================================
N8N_HOST=n8n.promolinxy.online
N8N_PROTOCOL=https
N8N_PORT=5678
