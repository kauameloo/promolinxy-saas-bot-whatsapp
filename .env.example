# Example environment variables for local development
# Copy this file to .env and adjust values before running

# Database (Postgres)
POSTGRES_USER=saasbot
POSTGRES_PASSWORD=saasbot123
POSTGRES_DB=saasbot
# If using a local Postgres container the compose file maps 5432
DATABASE_URL=postgresql://saasbot:saasbot123@postgres:5432/saasbot

# JWT secret for API authentication
JWT_SECRET=change_this_jwt_secret

# Cakto webhook verification secret
CAKTO_WEBHOOK_SECRET=change_this_cakto_secret

# WhatsApp engine session path (inside container)
WHATSAPP_SESSION_PATH=/app/sessions

# Node environment
NODE_ENV=development

# Optional: Redis URL if using an external Redis
REDIS_URL=redis://redis:6379
